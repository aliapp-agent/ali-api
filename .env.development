# Ali API - Development Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_ENV=development
PROJECT_NAME=Ali API
VERSION=1.0.0
DESCRIPTION=A production-ready FastAPI template with Agno and Langfuse integration
API_V1_STR=/api/v1
DEBUG=true

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# PostgreSQL for main application data (users, sessions, etc.)
POSTGRES_URL=postgresql://ali_user:ali_password@localhost:5432/ali_db
POSTGRES_PASSWORD=ali_password
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=5

# SQLite for Agno agent memory (conversations, checkpoints)
AGNO_MEMORY_PATH=./data/agno_memory.db

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# OpenAI API Configuration
LLM_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4o-mini
DEFAULT_LLM_TEMPERATURE=0.2
MAX_TOKENS=2000
MAX_LLM_CALL_RETRIES=3

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-for-development-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
FIREBASE_PROJECT_ID=ali-api-development
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIREBASE_STORAGE_BUCKET=ali-api-development.appspot.com
FIREBASE_REGION=us-central1

# Para desenvolvimento local, use mock services
USE_MOCK_SERVICES=true

# =============================================================================
# LANGFUSE OBSERVABILITY (Optional)
# =============================================================================
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# CORS SETTINGS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_DIR=./logs
LOG_LEVEL=INFO
LOG_FORMAT=console

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_DEFAULT=1000 per day,200 per hour

# Specific endpoint rate limits (development - relaxed)
RATE_LIMIT_CHAT=100 per minute
RATE_LIMIT_CHAT_STREAM=50 per minute
RATE_LIMIT_MESSAGES=100 per minute
RATE_LIMIT_REGISTER=20 per hour
RATE_LIMIT_LOGIN=50 per minute
RATE_LIMIT_ROOT=50 per minute
RATE_LIMIT_HEALTH=100 per minute

# =============================================================================
# EVALUATION CONFIGURATION (Optional)
# =============================================================================
EVALUATION_LLM=gpt-4o-mini
EVALUATION_BASE_URL=https://api.openai.com/v1
EVALUATION_API_KEY=sk-your-evaluation-api-key-here
EVALUATION_SLEEP_TIME=5

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================
# Enable request/response logging in development
ENABLE_REQUEST_LOGGING=true

# Disable some security checks for easier development
DISABLE_HTTPS_REDIRECT=true

# Development database reset (use with caution)
RESET_DB_ON_STARTUP=false

# Reduce startup noise for development
PYTHONWARNINGS=ignore::DeprecationWarning


# Elasticsearch Cloud Configuration
ELASTICSEARCH_URL=https://my-elasticsearch-project-c53447.es.us-central1.gcp.elastic.cloud:443
ELASTICSEARCH_API_KEY=T2d5S09aZ0JSdWh5aVRpUzRXRzI6bk1kZ1FKRWNGS1FKRnpLcE50ZHhOQQ==

# RAG Configuration
RAG_INDEX_NAME=agua-clara-ms
RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_RESULTS=5