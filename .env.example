# Ali API - Environment Configuration Template
# Copy this file to .env.development and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_ENV=development
PROJECT_NAME="Ali API"
VERSION="1.0.0"
DESCRIPTION="A production-ready FastAPI template with Agno and Langfuse integration"
API_V1_STR="/api/v1"
DEBUG=true

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# PostgreSQL for main application data (users, sessions, etc.)
# Format: postgresql://username:password@host:port/database
POSTGRES_URL="postgresql://username:password@localhost:5432/database_name"
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=5

# SQLite for Agno agent memory (conversations, checkpoints)
# This will be created automatically if it doesn't exist
AGNO_MEMORY_PATH="./data/agno_memory.db"

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
LLM_API_KEY="sk-your-openai-api-key-here"
LLM_MODEL="gpt-4o-mini"
DEFAULT_LLM_TEMPERATURE=0.2
MAX_TOKENS=2000
MAX_LLM_CALL_RETRIES=3

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
# Generate a secure secret key: openssl rand -hex 32
JWT_SECRET_KEY="your-super-secret-jwt-key-min-32-chars"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# LANGFUSE OBSERVABILITY (Optional)
# =============================================================================
# Sign up at: https://langfuse.com/
# Leave empty to disable observability
LANGFUSE_PUBLIC_KEY="pk-lf-your-public-key-here"
LANGFUSE_SECRET_KEY="sk-lf-your-secret-key-here"
LANGFUSE_HOST="https://cloud.langfuse.com"

# =============================================================================
# CORS SETTINGS
# =============================================================================
# Comma-separated list of allowed origins
# For development, include your frontend URLs
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_DIR="./logs"
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# =============================================================================
# RATE LIMITING
# =============================================================================
# Default rate limits (applied to all endpoints unless specifically set)
RATE_LIMIT_DEFAULT="200 per day,50 per hour"

# Specific endpoint rate limits
# Format: "X per minute" or "X per hour" or "X per day"
RATE_LIMIT_CHAT="30 per minute"
RATE_LIMIT_CHAT_STREAM="20 per minute"
RATE_LIMIT_MESSAGES="50 per minute"
RATE_LIMIT_REGISTER="10 per hour"
RATE_LIMIT_LOGIN="20 per minute"
RATE_LIMIT_ROOT="10 per minute"
RATE_LIMIT_HEALTH="20 per minute"

# =============================================================================
# EVALUATION CONFIGURATION (Optional)
# =============================================================================
# For model evaluation and testing
EVALUATION_LLM="gpt-4o-mini"
EVALUATION_BASE_URL="https://api.openai.com/v1"
EVALUATION_API_KEY="sk-your-evaluation-api-key-here"
EVALUATION_SLEEP_TIME=10

# =============================================================================
# ENVIRONMENT SPECIFIC OVERRIDES
# =============================================================================
# Development specific settings
# ENABLE_REQUEST_LOGGING=true
# DISABLE_HTTPS_REDIRECT=true
# RESET_DB_ON_STARTUP=false

# Production specific settings (uncomment for production)
# DEBUG=false
# LOG_LEVEL="WARNING"
# LOG_FORMAT="json"
# RATE_LIMIT_DEFAULT="200 per day,50 per hour"

# =============================================================================
# REQUIRED VARIABLES CHECKLIST
# =============================================================================
# Before running the application, make sure you have set:
#  POSTGRES_URL - Your PostgreSQL connection string
#  LLM_API_KEY - Your OpenAI API key
#  JWT_SECRET_KEY - A secure secret key for JWT tokens
#
# Optional but recommended:
#  LANGFUSE_PUBLIC_KEY & LANGFUSE_SECRET_KEY - For observability
#  ALLOWED_ORIGINS - Your frontend URLs for CORS